# Deny all access to view files
# This prevents direct browser access to view templates
# while still allowing PHP scripts to include/require them

# Apache 2.4 syntax
<RequireAll>
    Require all denied
</RequireAll>

# Apache 2.2 fallback syntax
<IfModule !mod_authz_core.c>
    Order Deny,Allow
    Deny from all
</IfModule>